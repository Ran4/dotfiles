{
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/home/ran/.local/bin/black",
    "python.formatting.autopep8Path": "/home/ran/.local/bin/autopep8",
    "python.analysis.autoImportCompletions": true,
    "python.linting.flake8Args": ["--select", "E302"],
    "pyright.organizeimports.provider": "isort",
    "python.sortImports.path": "/home/ran/.local/bin/isort",
    "prettier.tabWidth": 4,
    "prettier.bracketSpacing": false,
    "diagnostic.checkCurrentLine": false,
    "diagnostic.virtualText": true,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "suggest.noselect": true,
    "languageserver": {
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": ["elm"],
            "rootPatterns": ["elm.json"],
            "trace.server": "verbose",
            "initializationOptions": {
                "disableElmLSDiagnostics": false,
                "skipInstallPackageConfirmation": false
            }
        }
    },
    "list.height": 20,
    "codeLens.enable": true,
    "[typescript]": {
      "coc.preferences.formatOnSave": true,
      "diagnostic.virtualTextCurrentLineOnly": false
    },
    "[typescriptreact]": {
      "coc.preferences.formatOnSave": true,
      "diagnostic.virtualTextCurrentLineOnly": false
    },
    "[python]": {
      "coc.preferences.formatOnSave": true
    }
}
